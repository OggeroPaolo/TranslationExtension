{
  "manifest_version": 3,
  "name": "Translator",
  "version": "1.0",

  "description": "Allows for automatic translation using a locally running llm",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["injector.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["borderify.js", "utils.js"],
    "matches": ["*://*.youtube.com/*"]
  }],
  "host_permissions": ["*://*/*"]
}